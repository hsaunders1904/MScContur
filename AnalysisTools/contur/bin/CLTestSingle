                        bgError.append(refdata.points[i].yErrs[
                                       1] * lumi * normFacRef * (refdata.points[i].xMax - refdata.points[i].xMin))
                        # sigError.append(sighisto.points[i].yErrs[1]*lumi*normFacSig)
                        sigError.append(xsec.points[0].x)
